#
# main.cf entry:
# virtual_mailbox_domains = pgsql:/path/to/this/file.cf
#

#
# The hosts that Postfix will try to connect to
hosts = localhost

# The user name and password to log into the pgsql server.
user = {{ db_user }}
password = {{ db_password }}

# The database name on the servers.
dbname = {{ db_name }}

query = SELECT DISTINCT "mail_virtualmailbox"."domain_part" FROM "mail_virtualmailbox" WHERE ("mail_virtualmailbox"."active" = True AND "mail_virtualmailbox"."domain_part" = '%s')

