[uwsgi]
chdir = {{ project_home }}
socket = 127.0.0.1:{{ uwsgi_port }}
wsgi-file = {{ project_home }}/src/wsgi.py
master = true
cheaper-algo = spare
cheaper = 1
cheaper-initial = 1
workers = 3
cheaper-step = 1
threads = 2
post-buffering = 8192
b = 65535
harakiri = 300
disable-logging = 1
max-requests = 100

; load environment secrets
for-readline = {{ env_file_dest }}
  env = %(_)
endfor =
